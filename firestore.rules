rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Fonction helper
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Fonction pour vérifier si l'utilisateur est admin
    function isAdmin() {
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }
    
    // Collection des admins
    match /admins/{adminId} {
      // Lecture: seulement par l'admin lui-même
      allow read: if isAuthenticated() && request.auth.uid == adminId;
      
      // Création: permise pour l'inscription initiale
      allow create: if true;
      
      // Mise à jour: seulement par l'admin lui-même
      allow update: if isAuthenticated() && request.auth.uid == adminId;
      
      // Suppression: interdite (soft delete seulement)
      allow delete: if false;
      
      // Sous-collection des projets
      match /projets/{projetId} {
        // Lecture: par l'admin
        allow read: if isAuthenticated() && request.auth.uid == adminId;
        
        // Écriture: par l'admin
        allow write: if isAuthenticated() && request.auth.uid == adminId;
      }
      
      // Sous-collection des utilisateurs
      match /users/{userId} {
        allow read, write: if isAuthenticated() && request.auth.uid == adminId;
      }
    }
    
    // Collection users pour compatibilité
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
  }
}